{
    "openapi": "3.0.0",
    "info": {
        "title": "ComandaFlow CE API",
        "description": "API documentation for ComandaFlow CE application",
        "contact": {
            "email": "admin@comandaflow.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080/api",
            "description": "ComandaFlow CE API Server"
        }
    ],
    "paths": {
        "/api/health": {
            "get": {
                "tags": [
                    "Health"
                ],
                "summary": "Get system health status",
                "description": "Returns the health status of all system services including database and cache",
                "operationId": "getHealthStatus",
                "responses": {
                    "200": {
                        "description": "System is healthy",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "healthy"
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-09-19T12:00:00Z"
                                        },
                                        "services": {
                                            "properties": {
                                                "database": {
                                                    "properties": {
                                                        "status": {
                                                            "type": "string",
                                                            "example": "healthy"
                                                        },
                                                        "connection": {
                                                            "type": "string",
                                                            "example": "pgsql"
                                                        },
                                                        "response_time_ms": {
                                                            "type": "number",
                                                            "format": "float",
                                                            "example": 15.07
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "cache": {
                                                    "properties": {
                                                        "status": {
                                                            "type": "string",
                                                            "example": "healthy"
                                                        },
                                                        "driver": {
                                                            "type": "string",
                                                            "example": "database"
                                                        },
                                                        "response_time_ms": {
                                                            "type": "number",
                                                            "format": "float",
                                                            "example": 2.1
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "503": {
                        "description": "System is unhealthy",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "unhealthy"
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-09-19T12:00:00Z"
                                        },
                                        "services": {
                                            "properties": {
                                                "database": {
                                                    "properties": {
                                                        "status": {
                                                            "type": "string",
                                                            "example": "unhealthy"
                                                        },
                                                        "error": {
                                                            "type": "string",
                                                            "example": "Connection failed"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Health",
            "description": "Health check endpoints"
        }
    ]
}